import chess

def print_board(board):
    """Skriver ut brettet på en lesbar måte i terminalen."""
    print("\n")
    print(board)
    print("\n")

def main():
    board = chess.Board()
    
    print("--- Velkommen til Sjakk i Terminalen ---")
    print("Skriv trekkene dine i SAN-notasjon (f.eks. e4, Nf3, O-O).")
    
    while not board.is_game_over():
        print_board(board)
        
        # Viser hvem sin tur det er
        turn = "Hvit" if board.turn == chess.WHITE else "Svart"
        move_input = input(f"{turn} sitt trekk: ")
        
        try:
            # Sjekker om trekket er gyldig
            move = board.parse_san(move_input)
            if move in board.legal_moves:
                board.push(move)
            else:
                print("Ulovlig trekk! Prøv igjen.")
        except ValueError:
            print("Ugyldig format. Bruk SAN (f.eks. 'e2e4' eller 'Nf3').")
            
    # Avslutning
    print_board(board)
    print("Spillet er slutt!")
    print(f"Resultat: {board.result()}")

if __name__ == "__main__":
    main()
